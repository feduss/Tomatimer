<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App.Main" parent="@android:style/Theme.DeviceDefault">
    </style>

    <style name="Theme.App.Notification" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@android:color/black</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_background</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">2000</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.App.Main</item>
    </style>

</resources>
